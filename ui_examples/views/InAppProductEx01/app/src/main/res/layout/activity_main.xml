<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lee.dorian.inapp_product_ex01.MainActivity">

    <TextView
        android:id="@+id/tvSampleItemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Item Count: 0"/>

    <Button
        android:id="@+id/btnConsumeSampleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:text="Consume Sample Item" />

    <Button
        android:id="@+id/btnPurchaseSampleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnConsumeSampleItem"
        android:layout_marginBottom="5dp"
        android:text="Purchase Sample Item" />



</RelativeLayout>
